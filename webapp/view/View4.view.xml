                    <TileContent>
                        <Text text="Tile4"/>
                    </TileContent>
                </GenericTile>
                <GenericTile header="처리 예정 업무" class="sapUiSmallMarginBegin">
                    <TileContent>
                        <Text text="Tile5"/>
                    </TileContent>
                </GenericTile>
                <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop">
                    <Toolbar>
                        <Title text="확인용" class="sapUiSmallMarginBottom sapUiSmallMarginTop"/>
                    </Toolbar>
                </VBox>
                <GenericTile header="처리할 업무" subheader="(TO-DO)" class="sapUiSmallMarginBegin">
                    <TileContent>
                        <Text text="카트 + 차트 들어갈곳"/>
                    </TileContent>
                </GenericTile>
            </content>
        </Panel>
    </Page>
</mvc:View>