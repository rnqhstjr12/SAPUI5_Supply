<mvc:View 
    controllerName="project1.controller.Study1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:table="sap.ui.table"
    xmlns:rowmodes="sap.ui.table.rowmodes"
>
    <f:DynamicPage toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Display Dealer Order"/>
                </f:heading>
                    <f:actions>
                        <Button text="Inquiry" icon="sap-icon://search" press="inquiry"/>
                    </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <form:SimpleForm editable="true">
                        <form:content>
                            <form:SimpleForm>
                                <form:content>
                                    <Label text="Production Month" wrapping="false">
                                    <layoutData>
                                        <layout:GridData span="XL4 L4 M4 S4"/>
                                    </layoutData>
                                    </Label>
                                    <DatePicker displayFormat="yyyy-MM">
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </DatePicker>
                                    <Label text="Model Year" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Select>
                                        <core:Item key="all" text="--All--"/>
                                        <core:Item key="key1" text="1"/>
                                        <core:Item key="key2" text="2"/>
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Select>
                                    <Label text="Car Line" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Select>
                                        <core:Item key="all" text="--All--"/>
                                        <core:Item key="key1" text="1"/>
                                        <core:Item key="key2" text="2"/>
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Select>
                                    <Label text="Order Status" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Text text="Confirmed" >
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Text>
                                </form:content>
                                <form:layoutData>
                                    <layout:GridData span="XL6 L6 M6 S12"/>
                                </form:layoutData>
                            </form:SimpleForm>
                            <form:SimpleForm>
                                <form:content>
                                    <Label text="Submitted Dealer Order" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Text text="37" >
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Text>
                                    
                                    <Label text="Confirmed Dealer Order" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Text text="31" >
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Text>
                                    
                                    <Label text="Submitted Supplenmental Order" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Text text="0" >
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Text>
                                    
                                    <Label text="ConfirmEd Supplenmental Order" wrapping="false">
                                        <layoutData>
                                            <layout:GridData span="XL4 L4 M4 S4"/>
                                        </layoutData>
                                    </Label>
                                    <Text text="0" >
                                        <layoutData>
                                            <layout:GridData span="XL8 L8 M8 S8"/>
                                        </layoutData>
                                    </Text>
                                </form:content>
                                <form:layoutData>
                                    <layout:GridData span="XL6 L6 M6 S12"/>
                                </form:layoutData>
                            </form:SimpleForm>
                        </form:content>
                    </form:SimpleForm>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <Toolbar>
                    <IconTabHeader>
                        <items>
                            <IconTabFilter text="By Car Line" key="car"/>
                            <IconTabFilter text="By Trim" key="trim"/>
                            <IconTabFilter text="By Trim + Colour" key="tc"/>
                        </items>
                    </IconTabHeader>
                    <ToolbarSpacer/>
                    <Button text="Back" icon="sap-icon://nav-back" press=".onBack" />
                </Toolbar>
            <table:Table
                selectionMode="None"
                filter="{TrimModel>/}"
                sort="{TrimModel>/}"
                rows="{TrimModel>/}"
            >
                <table:rowMode>
                    <rowmodes:Fixed fixedBottomRowCount="1"/>
                </table:rowMode>
                <table:columns>
                    <table:Column hAlign="Center" sortProperty="data1" filterProperty="data1">
                        <table:multiLabels>
                            <Label text=""/>
                            <Label text="Model &#10; Year" textAlign="Center" wrapping="true"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data1}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text=""/>
                            <Label text="Trim" textAlign="Center"/>
                        </table:multiLabels>
                        <table:template>
                            <VBox>
                                <Link text="{TrimModel>data2}" visible="{= ${TrimModel>data2} === 'Total' ? false : true }"/>
                                <Text text="{TrimModel>data2} " visible="{= ${TrimModel>data2} === 'Total' ? true : false }" />
                            </VBox>
                        </table:template>
                    </table:Column>
                    <table:Column headerSpan="2" hAlign="Center">
                        <table:multiLabels>
                            <Label text="Submitted"/>
                            <Label text="Dealer Order"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data3}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text="Submitted"/>
                            <Label text="Supplemental"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data4}" />
                        </table:template>
                    </table:Column>
                    <table:Column headerSpan="2" hAlign="Center">
                        <table:multiLabels>
                            <Label text="Confirmed"/>
                            <Label text="Dealer Order"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data5}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text="Confirmed"/>
                            <Label text="Supplemental"/>
                        </table:multiLabels>
                        <table:template>
                            <Link text="{TrimModel>data6}" />
                        </table:template>
                    </table:Column>
                    <table:Column headerSpan="2" hAlign="Center">
                        <table:multiLabels>
                            <Label text="Cancelled"/>
                            <Label text="Dealer Order"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data7}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text="Cancelled"/>
                            <Label text="Supplemental"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data8}" />
                        </table:template>
                    </table:Column>
                    <table:Column headerSpan="2" hAlign="Center">
                        <table:multiLabels>
                            <Label text="Allocated"/>
                            <Label text="Dealer Order"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data9}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text="Allocated"/>
                            <Label text="Supplemental"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data10}" />
                        </table:template>
                    </table:Column>
                    <table:Column headerSpan="2" hAlign="Center">
                        <table:multiLabels>
                            <Label text="Delivered"/>
                            <Label text="Dealer Order"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data11}" />
                        </table:template>
                    </table:Column>
                    <table:Column hAlign="Center">
                        <table:multiLabels>
                            <Label text="Delivered"/>
                            <Label text="Supplemental"/>
                        </table:multiLabels>
                        <table:template>
                            <Text text="{TrimModel>data12}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>